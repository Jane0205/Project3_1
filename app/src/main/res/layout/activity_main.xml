<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarStyle="outsideInset"
    tools:context="com.example.android.project3.MainActivity">

    <LinearLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Quiz App!"
            android:textAllCaps="true"
            android:textColor="#000000"
            android:textSize="40sp" />

        <TextView
            style="@style/Question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Q1.When is Jane's birthday?" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="Q1">

            <TextView
                android:id="@+id/month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Month :" />

            <CheckBox
                android:id="@+id/month1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/month"
                android:text="February"
                android:onClick="Q1"/>

            <CheckBox
                android:id="@+id/month2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/month1"
                android:text="July"
                android:onClick="Q1"/>

            <CheckBox
                android:id="@+id/month3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/month2"
                android:text="December"
                android:onClick="Q1"/>

            <TextView
                android:id="@+id/day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Day  :    " />

            <CheckBox
                android:id="@+id/day1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_toRightOf="@id/day"
                android:text="5th"
                android:onClick="Q1"/>

            <CheckBox
                android:id="@+id/day2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/day1"
                android:layout_alignBottom="@+id/day1"
                android:layout_centerHorizontal="true"
                android:text="17th"
                android:onClick="Q1"/>

            <CheckBox
                android:id="@+id/day3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/day2"
                android:layout_alignBottom="@+id/day2"
                android:layout_toEndOf="@+id/month2"
                android:layout_toRightOf="@+id/month2"
                android:text="21th"
                android:onClick="Q1"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/textView"
            style="@style/Question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Q2.Where is Jane from?" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/from">

            <RadioButton
                android:id="@+id/SKorea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="South Korea"
                android:onClick="Q2"/>

            <RadioButton
                android:id="@+id/America"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="America"
                android:onClick="Q2"/>

            <RadioButton
                android:id="@+id/Brazil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Brazil"
                android:onClick="Q2"/>

            <RadioButton
                android:id="@+id/NKorea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="North Korea"
                android:onClick="Q2"/>
        </RadioGroup>

        <TextView
            style="@style/Question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Q3.What is the things Jane's interested in?" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/major2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="English"
                android:onClick="Q3"/>

            <CheckBox
                android:id="@+id/major1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Computer Science"
                android:layout_marginLeft="150dp"
                android:onClick="Q3"/>

            <CheckBox
                android:id="@+id/major4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fashion"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="150dp"
                android:onClick="Q3"/>

            <CheckBox
                android:id="@+id/major3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Music"
                android:layout_below="@+id/major2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:onClick="Q3"/>
        </RelativeLayout>

        <TextView
            style="@style/Question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Q4.Does Jane have any brothers or sisters?" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/girl"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/girl" />

            <ImageView
                android:id="@+id/boy"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_toRightOf="@id/girl"
                android:src="@drawable/boy" />

            <ImageView
                android:id="@+id/alone"
                android:layout_width="130dp"
                android:layout_height="150dp"
                android:layout_alignBottom="@+id/boy"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/boy"
                android:layout_toRightOf="@+id/boy"
                android:src="@drawable/alone" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sibling"
                >

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/girl"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:text="Sister"
                    android:id="@+id/sis"
                    android:onClick="Q4"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/boy"
                    android:layout_marginLeft="107dp"
                    android:layout_marginTop="10dp"
                    android:text="Brother"
                    android:id="@+id/bro"
                    android:onClick="Q4"/>


                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="200dp"
                    android:layout_marginTop="110dp"
                    android:text="She is only child"
                    android:id="@+id/only"
                    android:onClick="Q4"/>
            </RadioGroup>
        </RelativeLayout>


        <TextView
            style="@style/Question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Q5.What is her Korean name?" />

        <EditText
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint=":)?" />


        <Button
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="submit"
            android:text="Submit" />
    </LinearLayout>
</ScrollView>
